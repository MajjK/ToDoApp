@model ToDoApp.ViewModel.Tasks.TaskViewModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>
@Html.AntiForgeryToken()
<p class="text-danger">@ViewData["ErrorMessage"]</p>
<div>
    <h4>Task</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Objective)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Objective)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClosingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClosingDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Finished)
        </dt>
