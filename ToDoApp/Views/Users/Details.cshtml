@model ToDoApp.ViewModel.Users.UserViewModel
@using Microsoft.AspNetCore.Http.Extensions

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Login)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Login)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AdditionDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AdditionDate)
        </dd>

        <table class="table">
            <tr>
                <th>Task</th>
                <th>Closing Date</th>
                <th>Finished</th>
            </tr>
            @foreach (var item in Model.Tasks)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Objective)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClosingDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Finished)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Tasks", new { id = item.TaskId, returnUrl = @Context.Request.GetDisplayUrl() }) |
                        @Html.ActionLink("Details", "Details", "Tasks", new { id = item.TaskId }) |
                        @Html.ActionLink("Delete", "Delete", "Tasks", new { id = item.TaskId, returnUrl = @Context.Request.GetDisplayUrl() })
                    </td>
                </tr>
            }
        </table>
    </dl>
    <hr />
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.UserId }) |
    @Html.ActionLink("Add Task", "Create", "Tasks", new { id = Model.UserId, returnUrl = @Context.Request.GetDisplayUrl() }) |
    @Html.ActionLink("Back to List", "Index")
</p>
