<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" title="Manage">Hello @User.Identity.Name!</a>
        </li>

        <li class="nav-item">
            <form class="form-inline" asp-area="" asp-controller="Auth" asp-action="Edit" method="get">
                <button type="submit" class="nav-link btn btn-light text-dark">Edit Account</button>
            </form>
        </li>

        <li class="nav-item">
            <form class="form-inline" asp-area="" asp-controller="Auth" asp-action="Logout" method="post">
                <button type="submit" class="nav-link btn btn-light text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <form class="form-inline" asp-area="" asp-controller="Auth" asp-action="Register" method="get">
                <button type="submit" class="nav-link btn btn-light text-dark">Create Account</button>
            </form>
        </li>
    }
</ul>
